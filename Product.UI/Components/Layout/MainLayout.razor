@inherits LayoutComponentBase
<Toasts class="p-3" AutoHide="true" Delay="4000" Placement="ToastsPlacement.TopRight" />

<div class="main-layout">
    <header class="navbar">
        <h1 class="project-name">Inventory Management Dashboard</h1>
    </header>

    <main class="content">
        @Body
    </main>

    <footer class="footer">
        &copy; @DateTime.Now.Year M.A. Monaem Khan. All rights reserved.
    </footer>
</div>

<style>
    body, html {
        margin: 0;
        padding: 0;
        height: 100%;
        font-family: Arial, sans-serif;
    }

    .main-layout {
        display: flex;
        height: 10%;
        flex-direction: column;
        height: 100vh;
    }

    .navbar {
        background: linear-gradient(-45deg, #ff6b6b, #f8e473, #6bffb0, #6bb4ff);
        background-size: 400% 400%;
        animation: gradientShift 5s ease infinite;
        color: white;
        padding: 1rem;
        text-align: center;
    }

    .project-name {
        margin: 0;
        font-size: 1.5rem;
        text-align:center;
        width:100%;
    }


    .content {
        flex: 1;
        height: 80%;
        overflow-y: auto;
        padding: 1rem;
        background-color: #f5f5f5;
    }

    .footer {
        text-align: center;
        height: 5%;
        padding: 0.5rem;
        background-color: #222;
        color: #ccc;
        font-size: 0.9rem;
    }
</style>
<script>
    function startColorShift() {
        const navbar = document.getElementById("navbar");
        const colors = ["#ff6b6b", "#f8e473", "#6bffb0", "#6bb4ff", "#bd6bff"];
        let index = 0;

        setInterval(() => {
            navbar.style.backgroundColor = colors[index];
            index = (index + 1) % colors.length;
        }, 2000);
    }

    window.onload = function () {
        startColorShift();
    };
</script>

